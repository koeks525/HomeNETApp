<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.ForgotPasswordFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_margin="5dp"
                android:text="@string/reset_password_string"
                android:fontFamily="sans-serif-light"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/email_string">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id = "@+id/ResetPasswordEmailEditText"
                    android:inputType="textEmailAddress"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_birth_string"
                android:layout_margin="5dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id = "@+id/ResetPasswordDOBEditText"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:id = "@+id/ResetPasswordButton"
                android:layout_gravity="center"/>
            
            
            
            
        </LinearLayout>
    </android.support.v7.widget.CardView>

    
</LinearLayout>
