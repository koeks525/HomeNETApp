<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.CreateAccountFragment"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:weightSum="100">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewStyle"
                    android:hint= "@string/name_string"
                    >
                    <EditText
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id = "@+id/CreateAccountNameEditText"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    style="@style/TextViewStyle"
                    android:layout_height="wrap_content"
                    android:hint="@string/surname_string">
                    <EditText
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id = "@+id/CreateAccountSurnameEditText"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_string">
                    <EditText
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id = "@+id/CreateAccountEmailAddress"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_string">
                    <EditText
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id = "@+id/CreateAccountUsernameEditText"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint">
                    <EditText
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id = "@+id/CreateAccountPasswordEditText"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="100">
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextViewStyle"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:hint="@string/date_of_birth_string">
                        <EditText
                            style="@style/TextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id = "@+id/CreateAccountDateOfBirthEditText"/>
                    </android.support.design.widget.TextInputLayout>
                    <FrameLayout
                        android:layout_weight="50"
                        android:background="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginEnd="5sp">
                        <Button
                            android:fontFamily="sans-serif-light"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id = "@+id/DateOfBirthButton"
                            style="?android:attr/buttonStyleSmall"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@android:color/white"
                            android:text="@string/dob_button"/>
                    </FrameLayout>
                </TableRow>
                <com.jaredrummler.materialspinner.MaterialSpinner
                    style="@style/TextViewStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="3dp"
                    android:id = "@+id/CreateAccountCountrySpinner"
                    android:hint="@string/select_country"/>
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:layout_width="match_parent"
                    style="@style/TextViewStyle"
                    android:layout_height="wrap_content"
                    android:hint="@string/gender_string"
                    android:id = "@+id/CreateAccountGenderSpinner"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    >
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id = "@+id/CreateAccountSignUpButton"
                        android:src="@drawable/ic_done_all_white_24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        />
                </RelativeLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
