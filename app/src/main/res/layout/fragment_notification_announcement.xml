<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="NotificationFragments.NotificationAnnouncementFragment"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id = "@+id/NotificationAnnouncementInformationCardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/announcement_title_string"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
                    android:id = "@+id/NotificationAnnouncementTitleTextView"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="@string/message_string"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="9"
                android:id = "@+id/NotificationAnnouncementMessageTextView"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
