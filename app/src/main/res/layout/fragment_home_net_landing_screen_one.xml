<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.HomeNetLandingScreenOne"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id = "@+id/LandingScreenTitleTextView"
                    android:text="@string/no_houses_string"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_height="0dp"
                        android:id = "@+id/LandingScreenHomeCardView"
                        android:layout_width="0dp"
                        android:layout_alignParentStart="true"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:layout_margin="5dp"
                                android:src="@drawable/hot_home_icon"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="@string/add_home_string"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBaseline="@id/LandingScreenHomeCardView"
                        android:id = "@+id/SendHouseMessageButton"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="100"
                                android:src="@drawable/email_send_icon"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="@string/send_house_message_string"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:layout_below="@id/LandingScreenHomeCardView"
                        android:id = "@+id/CreateOrganizationCardView"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="100"
                                android:src="@drawable/company_building_icon"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="@string/create_organization_String"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:layout_alignParentEnd="true"
                        android:id = "@+id/HelpCardView"
                        android:layout_below="@id/SendHouseMessageButton"
                        app:layout_heightPercent="50%"
                        app:layout_widthPercent="50%"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="100"
                                android:src="@drawable/help_icon"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="@string/help_string"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
