<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id = "@+id/ConversationCardView"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:id = "@+id/ConversationImageView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_margin="5dp"
            android:id = "@+id/ConversationNameSurnameTextView"
            android:layout_toRightOf="@id/ConversationImageView"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:id = "@+id/ConversationLineView"
            android:layout_below="@id/ConversationNameSurnameTextView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/ConversationMessageTextView"
            android:layout_below="@id/ConversationLineView"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@id/ConversationMessageTextView"
            android:id = "@+id/ConversationLineViewTwo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/ConversationDateSentTextView"
            android:layout_below="@id/ConversationLineViewTwo"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>